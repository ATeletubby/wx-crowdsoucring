.list-item{
  display: flex;
  align-items: center;
  /* height:200rpx; */
  background-color: #ffffff;
  padding: 20rpx 0;
  border-radius: 10rpx;
  box-shadow: 2rpx 2rpx 1rpx 1rpx #ccc;
  margin-bottom: 20rpx;
}
.list-item_hd{
  width: 120rpx;
  padding: 32rpx;
  line-height: 60px;
  text-align: center;
}
.list-item_bd{
  flex: 1;
}
.list-item_thumb{
  width: 100rpx;
  max-height: 100%;
  height: 100rpx;
  /* vertical-align: top; */
  border-radius: 50%;
  border:1px solid #ccc;
}

.list-cell {
  width: 100%;
  display: flex;
  /* position: relative; */
  align-items: center;
  justify-content: space-between;
  color: #424141;
}
.list-cell_bd {
  flex: 1;
}
.list-cell_ft{
  padding-right: 44rpx;
  font-size: 22rpx;
  letter-spacing: 2rpx;
}
.list-cell_ft b{
  font-weight: 700;
  letter-spacing: 0;
}
.list-icon{
  font-size: 24rpx;
  margin-top:24rpx;
}
.list-icon-info{
  margin-left: 10rpx;
  margin-right:10rpx;
}
.list-tag{
  padding: 10rpx 20rpx;
  border-radius: 40rpx 40rpx 0 40rpx;
  background-color: #f5f5f5;
  font-size: 24rpx;
}
.list-timebegin{
  font-size: 24rpx;
  color: #6E6E6E;
}