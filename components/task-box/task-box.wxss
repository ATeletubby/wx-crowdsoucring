.list-item{
  display: flex;
  align-items: center;
  /* height:200rpx; */
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 2rpx 2rpx 1rpx 1rpx #ccc;
  margin-bottom: 20rpx;
}
.list-item_hd{
  width: 120rpx;
  padding-top: 10rpx;
  padding-right: 32rpx;
  line-height: 60px;
  text-align: center;
}
.list-item_bd{
  flex: 1;
}
.list-item_thumb{
  overflow:hidden;  
  display: block;  
  width: 120rpx;  
  height: 120rpx;  
  border-radius: 50%;  
  /* border: 2px solid #fff;   */
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}

.list-cell {
  width: 100%;
  display: flex;
  /* position: relative; */
  align-items: center;
  justify-content: space-between;
  color: #424141;
}
.list-cell_bd {
  flex: 1;
}
.list-cell_ft{
  /* padding-right: 44rpx; */
  font-size: 22rpx;
  letter-spacing: 2rpx;
}
.list-cell_ft b{
  font-weight: 700;
  letter-spacing: 0;
}
.list-icon{
  font-size: 24rpx;
  margin-top:24rpx;
}
.list-icon-info{
  margin-left: 10rpx;
  margin-right:10rpx;
}
.list-tag{
  padding: 10rpx 20rpx;
  border-radius: 40rpx 40rpx 0 40rpx;
  background-color: #f5f5f5;
  font-size: 24rpx;
}
.list-timebegin{
  font-size: 24rpx;
  color: #6E6E6E;
}