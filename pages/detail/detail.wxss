/* pages/detail/detail.wxss */
.detail{
  padding: 30rpx;
}
.detail_title{
  font-size: 26rpx;
}
.detail_block {
  background-color: #fff;
  margin-bottom: 30rpx;
  padding: 12rpx 30rpx;
}
.detail_top_hd {
  width: 120rpx;
  padding-top: 10rpx;
  padding-right: 32rpx;
  line-height: 60px;
  text-align: center;
}
.detail_top_thumb{
  width: 120rpx;
  height: 120rpx;
  /* vertical-align: top; */
  border-radius: 50%;
  border:1px solid #ccc;
}
.detail_top_content{
  display: flex;
}
.detail_top_bd{
  flex: 1;
}
.detail-text{
  display: flex;
}
.detail-content{
  padding: 10rpx 5rpx;
  font-size: 28rpx;
}
.flex-cell.detail-label{
  color: #737C93;
  flex: 0.5
}
.detail-time{
  color: #737C93;
  font-size: 24rpx;
}
.detail-context{
  /* background-color: #f5f5f5; */
  overflow: hidden;
}
.detail-btn{
  width: 100%;
  margin-top: 100rpx;
  font-size: 24rpx;
}
button.map{
  font-size: 24rpx;
  color: #fff;
  background-color:#435990; 
}

.map-dialog .weui-dialog__hd{
  display: none;
}
.map-dialog .weui-dialog__bd{
  padding: 10rpx 10rpx;
}



/* 后期放在app.wxss */
.flex-column {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
}
.flex-column.detail_top_content{
  padding-left:16rpx;
}
.flex-row{
  display: flex;
  flex-direction: row;
  /* justify-content: center; */
  align-items: center;
}
view.flex-row{
  border-bottom: 2rpx solid #F4F1F1;
}
.flex-cell{
  flex: 1;
}
