.profile_top{
  display: flex;
  background-color: #F8D34E;
  padding: 40rpx 30rpx;
}
.profile_top_hd{
  width: 140rpx;
  padding-top: 10rpx;
  padding-right: 32rpx;
  line-height: 60px;
  text-align: center;
}
.profile_top_bd{
  flex: 1;
}
.profile_top_thumb{
  width: 120rpx;
  height: 120rpx;
  /* vertical-align: top; */
  border-radius: 50%;
  border:2rpx solid #ccc;
}
.config-icon{
  font-size: 50rpx;
}
.profile-text{
  padding-right:30rpx;
}
.profile-data{
  color: #333;
  font-size: 24rpx;
}
.profile_navbar{
  display: flex;
}
.profile_navbar-item{
  flex: 1;
  text-align: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  color: #737C93;
  font-size: 28rpx;
}
.profile_navbar-item.selected_right{
  box-shadow: 2rpx 2rpx 20rpx 3rpx #ccc;
  border-bottom: 4rpx solid #ccc;
  color: #000;
  z-index: 100
}
.profile_navbar-item.selected_left{
  box-shadow: 2rpx 2rpx 22rpx 3rpx #ccc;
  border-bottom: 4rpx solid #ccc;
  color: #000;
  z-index: 100
}
.notask{
  width: 100%;
  padding-top: 100rpx;
  /* background-color: #fff; */
  text-align: center;
  color:#737C93;
}
.notask .notask-icon{
  font-size: 160rpx;
  display: block;
}
.btn.profile-zd{
  background-color: #F8D34E !important;
}
.profile-item {
  display: flex;
  padding: 30rpx 30rpx;
}
.profile-item_hd{
  width: 120rpx;
  padding-top: 10rpx;
  padding-right: 10rpx;
  line-height: 60px;
  text-align: center;
}
.profile-item_thumb{
  width: 90rpx;
  height: 90rpx;
  /* vertical-align: top; */
  border-radius: 50%;
  border:1px solid #ccc;
}
.profile-item_bd{
  flex: 1;
}
.profile-cell{
  display: flex;
  justify-content: space-between;
}
.profile-calendar{
  font-size: 24rpx;
  color:#737C93;
}
.profile-tag{
  color: #737C93;
  padding: 10rpx 20rpx;
  border-radius: 40rpx 40rpx 0 40rpx;
  background-color: #f5f5f5;
  font-size: 24rpx;
}
.profile-status{
  padding: 10rpx 0rpx;
  font-size: 26rpx;
}
.profile-status-s{
  color: #3C804B;
}
.profile-status-c,.profile-status-f{
  color: #737C93;
}
.profile-avatar{
  overflow:hidden;  
  display: block;  
  width: 120rpx;  
  height: 120rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}
