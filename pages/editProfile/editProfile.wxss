.edit-profile{
  margin: 10rpx;
  padding: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.profile-avatar image{
  overflow:hidden;  
  display: block;  
  width: 90rpx;  
  height: 90rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}
.edit-box{
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #f5f5f5;
  margin: 20rpx 0;
  padding-bottom: 10rpx;
}
input.weui-input{
  text-align: right;
}
